{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "M-Log CSV Exporter",
  "version": "0.1.0",
  "identifier": "com.mlog.csvexporter",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build:web",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../build/web"
  },
  "app": {
    "windows": [
      {
        "title": "M-Log CSV Exporter",
        "width": 1280,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "../public/icon.png"
    ]
  }
}
